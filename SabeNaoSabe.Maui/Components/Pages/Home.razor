@page "/"
@using SabeNaoSabe.RazorClassLibrary

<h1>Hello, world!</h1>

Welcome to your new app

<button class="btn btn-primary" @onclick="CheckInternet"></button>
<Component1></Component1>


@code{
    private async void CheckInternet()
    {
        var hasInternet = Connectivity.Current.NetworkAccess == NetworkAccess.Internet;
        var internetType = Connectivity.Current.ConnectionProfiles.FirstOrDefault();
        await Application.Current.MainPage.DisplayAlert("Internet", $"Status:{hasInternet} do tipo {internetType}", "OK");
    }
}